{
  "extends": [
    "react-app",
    "prettier",
    "prettier/react",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true,
      "classes": true
    }
  },
  "plugins": ["react", "prettier", "flowtype"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 120
      }
    ],
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/jsx-closing-bracket-location": [2, "line-aligned"],
    "react/jsx-tag-spacing": 2,
    "react/prefer-stateless-function": 0,
    "react/no-multi-comp": [
      2,
      {
        "ignoreStateless": true
      }
    ],
    "react/prop-types": [
      2,
      {
        "skipUndeclared": true
      }
    ],
    "react/jsx-wrap-multilines": [
      2,
      {
        "declaration": true,
        "assignment": true,
        "return": true,
        "arrow": true
      }
    ],
    "import/prefer-default-export": 0,
    "react/jsx-no-target-blank": 2,
    "react/no-danger": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-pascal-case": 2,
    "global-require": 0,
    "no-console": 0
  }
}
